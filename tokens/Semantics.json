{
	"$schema": "https://schemas.w3.org/design-tokens",
	"color": {
		"base": {
			"white": {
				"$type": "color",
				"$value": "{color.neutral.white}",
				"$description": "Pure white color"
			},
			"black": {
				"$type": "color",
				"$value": "{color.neutral.black}",
				"$description": "Pure black color"
			}
		},
		"text": {
			"primary": {
				"$type": "color",
				"$value": "{color.turquoise.900}",
				"$description": "Primary text color - highest contrast"
			},
			"secondary": {
				"$type": "color",
				"$value": "{color.beige.600}",
				"$description": "Secondary text color - medium contrast"
			},
			"tertiary": {
				"$type": "color",
				"$value": "{color.beige.400}",
				"$description": "Tertiary text color - low contrast"
			},
			"inverse": {
				"$type": "color",
				"$value": "{color.neutral.white}",
				"$description": "Inverse text color for dark backgrounds"
			},
			"disabled": {
				"$type": "color",
				"$value": "{color.beige.300}",
				"$description": "Disabled text color"
			}
		},
		"brand": {
			"primary": {
				"$type": "color",
				"$value": "{color.turquoise.500}",
				"$description": "Primary brand color"
			},
			"primary-hover": {
				"$type": "color",
				"$value": "{color.turquoise.400}",
				"$description": "Primary brand color on hover"
			},
			"primary-light": {
				"$type": "color",
				"$value": "{color.turquoise.300}",
				"$description": "Light variant of primary brand color"
			},
			"primary-subtle": {
				"$type": "color",
				"$value": "{color.turquoise.100}",
				"$description": "Subtle variant of primary brand color"
			}
		},
		"secondary": {
			"primary": {
				"$type": "color",
				"$value": "{color.beige.500}",
				"$description": "Primary secondary color"
			},
			"primary-light": {
				"$type": "color",
				"$value": "{color.beige.300}",
				"$description": "Light variant of secondary color"
			},
			"primary-subtle": {
				"$type": "color",
				"$value": "{color.beige.100}",
				"$description": "Subtle variant of secondary color"
			}
		},
		"surface": {
			"base": {
				"$type": "color",
				"$value": "{color.neutral.white}",
				"$description": "Base surface color"
			},
			"subtle": {
				"$type": "color",
				"$value": "{color.beige.50}",
				"$description": "Subtle surface color for slight elevation"
			},
			"elevated": {
				"$type": "color",
				"$value": "{color.beige.100}",
				"$description": "Elevated surface color"
			},
			"emphasized": {
				"$type": "color",
				"$value": "{color.beige.200}",
				"$description": "Emphasized surface color for higher elevation"
			},
			"overlay": {
				"$type": "color",
				"$value": "rgba(0, 0, 0, 0.2)",
				"$description": "Overlay color for modals and dialogs"
			}
		},
		"border": {
			"default": {
				"$type": "color",
				"$value": "{color.beige.300}",
				"$description": "Default border color"
			},
			"subtle": {
				"$type": "color",
				"$value": "{color.beige.200}",
				"$description": "Subtle border color"
			},
			"emphasized": {
				"$type": "color",
				"$value": "{color.beige.400}",
				"$description": "Emphasized border color"
			},
			"focus": {
				"$type": "color",
				"$value": "{color.brand.primary}",
				"$description": "Focus border color"
			}
		},
		"state": {
			"success": {
				"primary": {
					"$type": "color",
					"$value": "{color.green.500}",
					"$description": "Primary success color"
				},
				"light": {
					"$type": "color",
					"$value": "{color.green.300}",
					"$description": "Light success color"
				},
				"subtle": {
					"$type": "color",
					"$value": "{color.green.100}",
					"$description": "Subtle success color"
				}
			},
			"warning": {
				"primary": {
					"$type": "color",
					"$value": "{color.yellow.500}",
					"$description": "Primary warning color"
				},
				"light": {
					"$type": "color",
					"$value": "{color.yellow.300}",
					"$description": "Light warning color"
				},
				"subtle": {
					"$type": "color",
					"$value": "{color.yellow.100}",
					"$description": "Subtle warning color"
				}
			},
			"error": {
				"primary": {
					"$type": "color",
					"$value": "{color.red.500}",
					"$description": "Primary error color"
				},
				"light": {
					"$type": "color",
					"$value": "{color.red.300}",
					"$description": "Light error color"
				},
				"subtle": {
					"$type": "color",
					"$value": "{color.red.100}",
					"$description": "Subtle error color"
				}
			}
		}
	}
}
